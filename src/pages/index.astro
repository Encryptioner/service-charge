---
import BillCalculator from '../components/BillCalculator';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="bn">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <title>Service Charge Bill Calculator - Easy Building Management</title>
    <meta
      name="description"
      content="Create and manage service charge bills for apartment buildings with ease. Free tool with support for multiple categories, print preview, and PDF download. Available in English and Bangla."
    />
    <meta
      name="keywords"
      content="service charge calculator, apartment building management, flat service charge, building bill calculator, Bangladesh building management, সার্ভিস চার্জ ক্যালকুলেটর"
    />
    <meta name="author" content="Ankur Mursalin" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://ankurmursalin.github.io/service-charge/" />
    <meta property="og:title" content="Service Charge Bill Calculator - Easy Building Management" />
    <meta
      property="og:description"
      content="Create and manage service charge bills for apartment buildings with ease. Free tool with support for multiple categories, print preview, and PDF download."
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://ankurmursalin.github.io/service-charge/" />
    <meta property="twitter:title" content="Service Charge Bill Calculator" />
    <meta
      property="twitter:description"
      content="Create and manage service charge bills for apartment buildings with ease."
    />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />

    <!-- PWA Manifest -->
    <link rel="manifest" href={`${import.meta.env.BASE_URL}manifest.json`} />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="Service Charge" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#2563eb" />
  </head>
  <body>
    <BillCalculator client:load />

    <script>
      // Register Service Worker for PWA offline support
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          const swPath = `${import.meta.env.BASE_URL}sw.js`;
          navigator.serviceWorker
            .register(swPath)
            .then((registration) => {
              console.log('Service Worker registered:', registration.scope);
            })
            .catch((error) => {
              console.log('Service Worker registration failed:', error);
            });
        });
      }
    </script>
  </body>
</html>
